<?xml version="1.0" encoding="utf-8"?>

<launch>
  <!-- Launch elevation mapping node. -->
  <node pkg="elevation_mapping_cupy" type="elevation_mapping_node" name="elevation_mapping" output="screen">
    <rosparam command="load" file="$(find elevation_mapping_cupy)/config/parameters.yaml" />
    <rosparam>
      map_frame: world
      base_frame: trunk
      pointcloud_topics: ["/realsense/front/camera/depth/points", "/realsense/down/camera/depth/points"]
    </rosparam>
    <remap from="/elevation_mapping/elevation_map_filter" to="/local_gridmap"/>
  </node>
</launch>